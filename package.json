{
  "name": "dateam",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "cd ./shared && npm run build && cd ../frontend && npm run build && cd .. && cd ./backend && npm run build ",
    "start": "cd ./backend && npm start",
    "pretest": "npm run build",
    "test": "cd ./backend && npm test",
    "predocker": "npm run build",
    "docker": "docker-compose --env-file .env up"
  }
}
